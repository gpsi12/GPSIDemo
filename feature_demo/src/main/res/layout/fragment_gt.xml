<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sbt_starts"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartService开启服务" />

    <Button
        android:id="@+id/sbt_binds"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sbt_starts"
        android:text="BindService绑定服务" />

    <Button
        android:id="@+id/sbt_stops"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sbt_starts"
        android:text="stopService停止服务" />

    <Button
        android:id="@+id/sbt_unbind"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sbt_binds"
        android:layout_alignLeft="@id/sbt_binds"
        android:text="unBind解绑服务" />
    <Button
        android:id="@+id/bt_bdgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送本地广播"
        android:layout_below="@id/sbt_stops"/>
    <Button
        android:id="@+id/bt_OPrecess"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sbt_unbind"
        android:layout_alignLeft="@+id/sbt_unbind"
        android:text="Activity单开进程"/>

    <Button
        android:id="@+id/bt_hqlxr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_bdgb"
        android:text="获取联系人"/>

    <Button
        android:id="@+id/bt_qqslder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_bdgb"
        android:text="类似消息qq滑动"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="G2" />

</RelativeLayout>